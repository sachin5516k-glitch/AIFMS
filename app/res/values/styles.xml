<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Card Style -->
    <style name="CardView.Enterprise" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardBackgroundColor">@color/surface_light</item>
    </style>

    <!-- Button Style -->
    <style name="Button.Enterprise" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingVertical">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Outline Button Style -->
    <style name="Button.Enterprise.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/brand_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:textColor">@color/brand_primary</item>
    </style>

    <!-- Headline Text -->
    <style name="Text.Headline" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_primary_light</item>
    </style>

    <!-- Body Text -->
    <style name="Text.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>
</resources>
