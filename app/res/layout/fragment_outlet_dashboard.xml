<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView text="Outlet Dashboard" style="@style/Text.Headline"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/aiBanner"
        style="@style/CardView.Enterprise"
        app:cardBackgroundColor="#FFF3E0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">
        <TextView
            android:text="⚠️ AI Warning: High Inventory Variance Detected!"
            android:textColor="@color/error_red"
            android:textStyle="bold"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.google.android.material.card.MaterialCardView>

    <TextView text="Today's Sales" style="@style/Text.Body" android:layout_marginTop="24dp"/>
    <TextView android:id="@+id/tvSales" text="$ 1,250.00" android:textSize="32sp" android:textStyle="bold" android:textColor="?attr/colorPrimary" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

</LinearLayout>
